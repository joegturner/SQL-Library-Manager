extends ../layout

block content
    h2= title

    include form-errors

    form(action="/books/" + book.id, method="post")
            include form
            |   
            if (errors)
                a.button(href="/books/" + book.id) &larr; Cancel
            else
                a.button(href=listingPage) &larr; Back
            |   
            a.button(href="/books/" + book.id + "/delete") Delete Book